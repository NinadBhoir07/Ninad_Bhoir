{%comment%}
Custom gift guide banner section
{%endcomment%}

<section class="gift-banner-hero" style="background-color: {{section.settings.bg_color}}; padding: {{section.settings.section_padding}}px 0;">
<div class="banner-container" style="max-width: {{section.settings.container_width}}px; margin:0 auto; padding: 0 20px;">

{%- comment -%} Top Bar with Logo and CTA {%- endcomment -%}
<div class="banner-top-bar" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 40px;">

{%- comment -%} Logo {%- endcomment -%}
<div class="banner-logo">
{% if section.settings.logo_text != blank %}
       <h2 style = "
        font-size: {{section.settings.logo_size}}px;
        font-weight: {{section.settings.logo_weight}};
        color: {{section.settings.logo_color}};
        margin: 0;
        letter-spacing: 2px;
        border: 2px solid {{section.settings.logo_border_color}};
        padding: 8px 16px;
        ">
        {{section.settings.logo_text}}
        </h2>
     {% endif %}
</div>

{%- comment -%} Top CTA Text and Button {%- endcomment -%}
<div class="banner-top-cta" style="display: flex; align-items: center; gap: 20px;">
{% if section.settings.top_cta_text != blank %}
     <p style="
     margin:0;
     font-size: {{ section.settings.top_ctat_text_size}}px;
     color: {{ section.settings.top_cta_text_color}};
     border: 1px solid #000;
     padding: 8px 16px;
     ">
     {{section.settings.top_cta_text}}
     </p>
 {% endif %}    

 {% if section.settings.top_button_text != blank %}
     <a href="{{ section.settings.top_button_link }}"
      class="banner-top-button"
      style="
      background-color: {{section.settings.top_button_bg}};
      color: {{section.settings.top_button_color}};
      padding: 12px 30px;
      text-decoration: none;
      font-weight: bold;
      font-size: {{ section.settings.top_button_text_size }}px;
      display:inline-flex;
      align-items: center;
      gap: 10x;
      transition: all 0.3s ease;
      border:none;
      ">
      {{ section.settings.top_button_text }}
      <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M4 101H16M16 10L11 5M16 10L11 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin ="round"/>
      </svg>
     </a>
     {% endif %}
</div>
</div>

</div>
</section>

<style>
.gift-banner-hero {
  overflow: hidden;
}

.banner-top-button:hover{
  transform: translateX(5px);
  opacity: 0.9;
}

.banner-top-button svg{
  transform: translateX(5px);
}

/* Mobile Responsive */
@media (max-width: 768px){
  .banner-top-bar{
    flex-direction: column !important;
    gap: 20px;
    text-align: center;
  }
}

.banner-logo h2{
  flex-direction: column !important;
}

.banner-top-cta{
  flex-direction: column !important;
}

.banner-logo h2{
  font-size: 20px !important;
}

.banner-top-button{
  font-size: 14px !important;
  padding: 10px 20px !important;
}
</style>


{% schema %}
{
  "name":"Custom Gift guide banner",
  "settings":[
    {
      "type":"header",
      "content": "Section Settings"
    },
    {
      "type":"color",
      "id":"bg_color",
      "label":"Background Color",
      "default":"#ffffff"
    }
  ],
  "presets" :[
    {
      "name":"Custom Banner Hero"
    }
  ]
}
{%endschema%}